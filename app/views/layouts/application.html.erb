<!DOCTYPE html>
<html>
<head>
  <title>Dinnertyme</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
    <div class="row">
      <div class="span12">
        
        <div class="navbar">
          <div class="navbar-inner">
            <a class="brand" href="<%= home_path %>">DinnerTyme</a>
            <ul class="nav">
              <%= link_to 'Kitchens', kitchens_path %>
              <%= link_to 'Ingredients', ingredients_path %>
              <%= link_to 'Recipes', recipes_path %>
            </ul>
          </div>
        </div>
        
      </div>
    </div>
    <div class="row">
      <div class="span3">
        <%=image_tag "fork-knife.jpg"%>
      </div>
      <div class="span9">
        <%= yield %>
      </div>
    </div>
  </div>

</body>
</html>
