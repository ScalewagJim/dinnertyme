<h1>Ingredients</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Unit</th>
    <th>Amount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ingredients.each do |ingredient| %>
  <tr class="ingredient">
    <td><%= ingredient.name %></td>
    <td><%= ingredient.unit %></td>
    <td><%= ingredient.amount %></td>
    
    <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
    <td><%= link_to 'Remove', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  
  </tr>
<% end %>
</table>

<br />

<div class="btn btn-large btn-success"><%= link_to 'New Ingredient', new_ingredient_path %></div>
